ALGORITHM iterative_repeat
VAR
    Correct: STRING; 
    password: STRING;
    Tries: INTEGER := 0;

BEGIN
    REPEAT //  This prompts the user for input
        Read( password )
        Tries := Tries + 1
        // if password attempts is more than 3 then break
    UNTIL ( password = Correct OR Tries > 3)

    Write( password )
END